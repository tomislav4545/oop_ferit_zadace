<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DZ5"
        xmlns:System="clr-namespace:System;assembly=mscorlib" xmlns:ApiUtilities="clr-namespace:ApiUtilities;assembly=ApiUtilities" x:Class="DZ5.MainWindow"
        mc:Ignorable="d"
        Title="Show Searcher" Height="320" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Canvas Margin="10,10,10,140">
            <TextBox x:Name="SearchQuarey" Canvas.Left="0" Canvas.Top="0" Width="259" Height="20" />
            <Button  Width="50" Height="20" Canvas.Left="264" x:Name="SearchButton" Content="Search" FontFamily="Microsoft Tai Le" FontSize="14" Click="Button_Clicked"/>
            <ListBox x:Name="ListOfShows" Height="200" Canvas.Top="25" Width="314" Grid.Row="1" Grid.Column="0" ItemsSource="{Binding}"/>
            <Button x:Name="MoreInfoButton" Content="More info" Canvas.Top="231" Width="314" Height="30" FontFamily="Microsoft Tai Le" FontSize="14"/>

        </Canvas>
    </Grid>
</Window>
